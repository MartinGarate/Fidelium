<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Admin"
             xmlns:converters="clr-namespace:MovilApp.Converters"
             x:Class="MovilApp.Views.Admin.SeguimientoVentasView"
             Title="Seguimiento de Ventas"
             BackgroundColor="#0d0617">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FeedbackColorConverter x:Key="FeedbackColorConverter"/>
            <converters:FeedbackTextConverter x:Key="FeedbackTextConverter"/>
            <converters:StringNotNullConverter x:Key="StringNotNullConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20"
          RowSpacing="20">

        <!-- TÃ­tulo mejorado -->
        <Frame Grid.Row="0"
               Padding="20,16"
               CornerRadius="16"
               BackgroundColor="#1a0824"
               BorderColor="#7a3cff"
               HasShadow="False">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                <Frame Grid.Column="0"
                       HeightRequest="50"
                       WidthRequest="50"
                       CornerRadius="25"
                       Padding="0"
                       BackgroundColor="#7a3cff"
                       HasShadow="False">
                    <Label Text="ðŸ“Š"
                           FontSize="28"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1"
                                     Spacing="2"
                                     VerticalOptions="Center">
                    <Label Text="Seguimiento de Ventas"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Gestiona feedbacks y recordatorios"
                           FontSize="13"
                           TextColor="LightGray"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Filtro mejorado CON ESPACIOS -->
        <Frame Grid.Row="1"
               BorderColor="#7a3cff"
               Padding="20"
               CornerRadius="16"
               BackgroundColor="#1a0824"
               HasShadow="False">
            <Grid RowDefinitions="Auto,Auto" RowSpacing="14">
                <HorizontalStackLayout Grid.Row="0" Spacing="10">
                    <Label Text="ðŸ”"
                           FontSize="20"
                           VerticalOptions="Center"/>
                    <Label Text="Filtrar por estado:" 
                           FontAttributes="Bold"
                           FontSize="17"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <Border Grid.Row="1"
                        Stroke="#7a3cff"
                        StrokeThickness="2"
                        BackgroundColor="#2a1034"
                        Padding="12,8"
                        StrokeShape="RoundRectangle 10">
                    <Picker SelectedItem="{Binding ModoVistaSeleccionadoTexto}"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            FontAttributes="Bold"
                            ItemsSource="{Binding ModosDeVista}">
                        <Picker.TitleColor>#bf4dff</Picker.TitleColor>
                    </Picker>
                </Border>
            </Grid>
        </Frame>

        <!-- Tabla de Compras mejorada -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     RefreshColor="#7a3cff">
            <ScrollView>
                <CollectionView ItemsSource="{Binding Compras}"
                                SelectionMode="None">
                    
                    <!-- Vista vacÃ­a mejorada -->
                    <CollectionView.EmptyView>
                        <Frame Padding="40"
                               BackgroundColor="#1a0824"
                               BorderColor="#7a3cff"
                               CornerRadius="20"
                               Margin="20">
                            <VerticalStackLayout HorizontalOptions="Center"
                                                 VerticalOptions="Center"
                                                 Spacing="20">
                                <Frame HeightRequest="100"
                                       WidthRequest="100"
                                       CornerRadius="50"
                                       Padding="0"
                                       BackgroundColor="#2a1034"
                                       BorderColor="#7a3cff"
                                       HasShadow="False">
                                    <Label Text="ðŸ“¦"
                                           FontSize="50"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="No hay compras para mostrar"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="White"/>
                                <Label Text="Cambia el filtro o actualiza la lista"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       TextColor="LightGray"/>
                                <Button Text="ðŸ”„ Actualizar Lista"
                                        Command="{Binding RefreshCommand}"
                                        BackgroundColor="#7a3cff"
                                        TextColor="White"
                                        CornerRadius="12"
                                        Padding="30,12"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        Margin="0,10,0,0"/>
                            </VerticalStackLayout>
                        </Frame>
                    </CollectionView.EmptyView>

                    <!-- Encabezado de tabla mejorado -->
                    <CollectionView.Header>
                        <Frame Padding="16,12"
                               BackgroundColor="#2a1034"
                               CornerRadius="12,12,0,0"
                               BorderColor="#7a3cff"
                               HasShadow="False"
                               Margin="0,0,0,-1">
                            <Grid ColumnDefinitions="2*,2*,1.5*,Auto,Auto"
                                  ColumnSpacing="12">
                                <Label Grid.Column="0" 
                                       Text="PRODUCTO/SERVICIO" 
                                       FontAttributes="Bold" 
                                       FontSize="11"
                                       TextColor="#bf4dff"/>
                                <Label Grid.Column="1" 
                                       Text="CLIENTE/VENDEDOR" 
                                       FontAttributes="Bold" 
                                       FontSize="11"
                                       TextColor="#bf4dff"/>
                                <Label Grid.Column="2" 
                                       Text="FECHAS" 
                                       FontAttributes="Bold" 
                                       FontSize="11"
                                       TextColor="#bf4dff"/>
                                <Label Grid.Column="3" 
                                       Text="ESTADO" 
                                       FontAttributes="Bold" 
                                       FontSize="11"
                                       TextColor="#bf4dff"
                                       HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="4" 
                                       Text="ACCIÃ“N" 
                                       FontAttributes="Bold" 
                                       FontSize="11"
                                       TextColor="#bf4dff"
                                       HorizontalTextAlignment="Center"/>
                            </Grid>
                        </Frame>
                    </CollectionView.Header>

                    <!-- Filas de la tabla mejoradas SIN OVALADAS -->
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="16"
                                   BackgroundColor="#1a0824"
                                   BorderColor="#7a3cff"
                                   CornerRadius="0"
                                   HasShadow="False"
                                   Margin="0,0,0,1">
                                <Grid ColumnDefinitions="2*,2*,1.5*,Auto,Auto"
                                      ColumnSpacing="12"
                                      RowSpacing="6">
                                    
                                    <!-- Separador superior -->
                                    <BoxView Grid.ColumnSpan="5"
                                             HeightRequest="1"
                                             Color="#7a3cff"
                                             Opacity="0.15"
                                             VerticalOptions="Start"
                                             Margin="0,0,0,8"/>

                                    <!-- Producto/Servicio -->
                                    <VerticalStackLayout Grid.Column="0" 
                                                         Spacing="6"
                                                         VerticalOptions="Center">
                                        <Label Text="{Binding Nombre}" 
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>
                                        <Frame Padding="6,3"
                                               CornerRadius="6"
                                               BackgroundColor="#2a1034"
                                               HasShadow="False"
                                               IsVisible="{Binding Descripcion, Converter={StaticResource StringNotNullConverter}}">
                                            <Label Text="{Binding Descripcion}" 
                                                   FontSize="11"
                                                   TextColor="LightGray"
                                                   LineBreakMode="TailTruncation"
                                                   MaxLines="1"/>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Cliente/Vendedor -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                         Spacing="8"
                                                         VerticalOptions="Center">
                                        <HorizontalStackLayout Spacing="6">
                                            <Frame HeightRequest="28"
                                                   WidthRequest="28"
                                                   CornerRadius="14"
                                                   Padding="0"
                                                   BackgroundColor="#7a3cff"
                                                   HasShadow="False">
                                                <Label Text="ðŸ‘¤"
                                                       FontSize="14"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Frame>
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="{Binding Cliente.Usuario.Nombre}" 
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="White"/>
                                                <Label Text="Cliente"
                                                       FontSize="10"
                                                       TextColor="#bf4dff"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                        
                                        <HorizontalStackLayout Spacing="6">
                                            <Frame HeightRequest="28"
                                                   WidthRequest="28"
                                                   CornerRadius="14"
                                                   Padding="0"
                                                   BackgroundColor="#22c55e"
                                                   HasShadow="False">
                                                <Label Text="ðŸ¤"
                                                       FontSize="14"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Frame>
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="{Binding Empleado.Nombre}" 
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="White"/>
                                                <Label Text="Vendedor"
                                                       FontSize="10"
                                                       TextColor="#22c55e"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Fechas -->
                                    <VerticalStackLayout Grid.Column="2" 
                                                         Spacing="10"
                                                         VerticalOptions="Center">
                                        <Frame Padding="8,6"
                                               CornerRadius="8"
                                               BackgroundColor="#2a1034"
                                               BorderColor="#7a3cff"
                                               HasShadow="False">
                                            <HorizontalStackLayout Spacing="6">
                                                <Label Text="ðŸ“…" FontSize="12"/>
                                                <Label Text="{Binding FechaCompra, StringFormat='{0:dd/MM/yy}'}" 
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Frame>
                                        
                                        <Frame Padding="8,6"
                                               CornerRadius="8"
                                               BackgroundColor="#2a1034"
                                               BorderColor="#f59e0b"
                                               HasShadow="False">
                                            <HorizontalStackLayout Spacing="6">
                                                <Label Text="ðŸ””" FontSize="12"/>
                                                <Label Text="{Binding FechaRecordatorio, StringFormat='{0:dd/MM/yy}'}" 
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="#f59e0b"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Estado Feedback SIN OVALADO -->
                                    <Frame Grid.Column="3"
                                           Padding="12,8"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           VerticalOptions="Center"
                                           BorderColor="{Binding FeedbackRecibido, Converter={StaticResource FeedbackColorConverter}}"
                                           BackgroundColor="{Binding FeedbackRecibido, Converter={StaticResource FeedbackColorConverter}}">
                                        <Label Text="{Binding FeedbackRecibido, Converter={StaticResource FeedbackTextConverter}}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalTextAlignment="Center"/>
                                    </Frame>

                                    <!-- BotÃ³n INTELIGENTE: Ver Feedback O Ver Contacto -->
                                    <Button Grid.Column="4"
                                            Text="{Binding FeedbackRecibido, Converter={StaticResource FeedbackTextConverter}}"
                                            FontSize="18"
                                            BackgroundColor="{Binding FeedbackRecibido, Converter={StaticResource FeedbackColorConverter}}"
                                            TextColor="White"
                                            CornerRadius="8"
                                            WidthRequest="45"
                                            HeightRequest="45"
                                            Padding="0"
                                            VerticalOptions="Center"
                                            Clicked="OnVerDetallesClicked">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding FeedbackRecibido}" Value="True">
                                                <Setter Property="Text" Value="ðŸ’¬"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding FeedbackRecibido}" Value="False">
                                                <Setter Property="Text" Value="ðŸ“ž"/>
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <!-- Footer mejorado -->
                    <CollectionView.Footer>
                        <Frame Padding="16,20"
                               BackgroundColor="#2a1034"
                               CornerRadius="0,0,12,12"
                               BorderColor="#7a3cff"
                               HasShadow="False"
                               Margin="0,-1,0,0">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                <Frame Grid.Column="0"
                                       HeightRequest="40"
                                       WidthRequest="40"
                                       CornerRadius="20"
                                       Padding="0"
                                       BackgroundColor="#7a3cff"
                                       HasShadow="False">
                                    <Label Text="ðŸ“Š"
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="2"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding Compras.Count, StringFormat='Total: {0} compras'}"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="Registros en esta vista"
                                           FontSize="11"
                                           TextColor="LightGray"/>
                                </VerticalStackLayout>
                                
                                <Button Grid.Column="2"
                                        Text="ðŸ”„ Actualizar"
                                        Command="{Binding RefreshCommand}"
                                        BackgroundColor="#22c55e"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="20,10"
                                        FontSize="13"
                                        FontAttributes="Bold"/>
                            </Grid>
                        </Frame>
                    </CollectionView.Footer>
                </CollectionView>
            </ScrollView>
        </RefreshView>

        <!-- Overlay de carga mejorado -->
        <Grid Grid.RowSpan="3"
              IsVisible="{Binding IsRefreshing}"
              BackgroundColor="#DD000000"
              InputTransparent="False">
            <Frame Padding="40"
                   BackgroundColor="#1a0824"
                   BorderColor="#7a3cff"
                   CornerRadius="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <VerticalStackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="20">
                    <ActivityIndicator IsRunning="{Binding IsRefreshing}"
                                       Color="#7a3cff"
                                       WidthRequest="60"
                                       HeightRequest="60"/>
                    <Label Text="Cargando compras..."
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Por favor espera..."
                           TextColor="LightGray"
                           FontSize="12"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
