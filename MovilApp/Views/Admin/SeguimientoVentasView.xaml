<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Admin"
             xmlns:converters="clr-namespace:MovilApp.Converters"
             x:Class="MovilApp.Views.Admin.SeguimientoVentasView"
             Title="Seguimiento de Ventas"
             BackgroundColor="#0d0617">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FeedbackColorConverter x:Key="FeedbackColorConverter"/>
            <converters:FeedbackTextConverter x:Key="FeedbackTextConverter"/>
            <converters:StringNotNullConverter x:Key="StringNotNullConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20"
          RowSpacing="20">

        <Frame Grid.Row="0"
               Padding="20,16"
               CornerRadius="8"
               BackgroundColor="#1a0824"
               BorderColor="#7a3cff"
               HasShadow="False">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                <Frame Grid.Column="0"
                       HeightRequest="50"
                       WidthRequest="50"
                       CornerRadius="6"
                       Padding="0"
                       BackgroundColor="#7a3cff"
                       HasShadow="False">
                    <Label Text="ðŸ“Š"
                           FontSize="28"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1"
                                     Spacing="2"
                                     VerticalOptions="Center">
                    <Label Text="Seguimiento de Ventas"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Gestiona feedbacks y recordatorios"
                           FontSize="13"
                           TextColor="LightGray"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <Frame Grid.Row="1"
               BorderColor="#7a3cff"
               Padding="20"
               CornerRadius="8"
               BackgroundColor="#1a0824"
               HasShadow="False">
            <Grid RowDefinitions="Auto,Auto" RowSpacing="14">
                <HorizontalStackLayout Grid.Row="0" Spacing="10">
                    <Label Text="ðŸ”" FontSize="20" VerticalOptions="Center"/>
                    <Label Text="Filtrar por estado:" 
                           FontAttributes="Bold"
                           FontSize="17"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Border Grid.Row="1"
                        Stroke="#7a3cff"
                        StrokeThickness="2"
                        BackgroundColor="#2a1034"
                        Padding="12,8"
                        StrokeShape="RoundRectangle 6">
                    <Picker SelectedItem="{Binding ModoVistaSeleccionadoTexto}"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            FontAttributes="Bold"
                            ItemsSource="{Binding ModosDeVista}">
                        <Picker.TitleColor>#bf4dff</Picker.TitleColor>
                    </Picker>
                </Border>
            </Grid>
        </Frame>

        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     RefreshColor="#7a3cff">
            <ScrollView>
                <CollectionView ItemsSource="{Binding Compras}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <Frame Padding="40"
                               BackgroundColor="#1a0824"
                               BorderColor="#7a3cff"
                               CornerRadius="10"
                               Margin="20">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="20">
                                <Frame HeightRequest="80" WidthRequest="80"
                                       CornerRadius="8" Padding="0"
                                       BackgroundColor="#2a1034" BorderColor="#7a3cff">
                                    <Label Text="ðŸ“¦" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="No hay compras" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                                <Button Text="ðŸ”„ Actualizar" Command="{Binding RefreshCommand}"
                                        BackgroundColor="#7a3cff" CornerRadius="6"/>
                            </VerticalStackLayout>
                        </Frame>
                    </CollectionView.EmptyView>

                    <CollectionView.Header>
                        <Frame Padding="16,12"
                               BackgroundColor="#2a1034"
                               CornerRadius="6"
                               BorderColor="#7a3cff"
                               HasShadow="False"
                               Margin="0,0,0,-1">
                            <Grid ColumnDefinitions="2*,2*,1.8*,Auto,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" Text="PRODUCTO" FontAttributes="Bold" FontSize="11" TextColor="#bf4dff"/>
                                <Label Grid.Column="1" Text="CLIENTE" FontAttributes="Bold" FontSize="11" TextColor="#bf4dff"/>
                                <Label Grid.Column="2" Text="FECHAS (Vta/Rec)" FontAttributes="Bold" FontSize="11" TextColor="#bf4dff"/>
                                <Label Grid.Column="3" Text="ESTADO" FontAttributes="Bold" FontSize="11" TextColor="#bf4dff" HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="4" Text="ACC" FontAttributes="Bold" FontSize="11" TextColor="#bf4dff"/>
                            </Grid>
                        </Frame>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="16"
                                   BackgroundColor="#1a0824"
                                   BorderColor="#7a3cff"
                                   CornerRadius="0"
                                   HasShadow="False"
                                   Margin="0,0,0,1">
                                <Grid ColumnDefinitions="2*,2*,1.8*,Auto,Auto" ColumnSpacing="12">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Nombre}" FontSize="14" FontAttributes="Bold" TextColor="White" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding Descripcion}" FontSize="10" TextColor="LightGray" MaxLines="1"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Cliente.Usuario.Nombre}" FontSize="12" TextColor="White" FontAttributes="Bold"/>
                                        <Label Text="{Binding Empleado.Nombre}" FontSize="11" TextColor="#22c55e"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" Spacing="4" VerticalOptions="Center">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="Vta:" FontSize="9" TextColor="LightGray" VerticalOptions="Center"/>
                                            <Label Text="{Binding FechaCompra, StringFormat='{0:dd/MM}'}" FontSize="11" TextColor="White" VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="Rec:" FontSize="9" TextColor="#f59e0b" VerticalOptions="Center"/>
                                            <Label Text="{Binding FechaRecordatorio, StringFormat='{0:dd/MM}'}" FontSize="11" TextColor="#f59e0b" VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <Frame Grid.Column="3" Padding="8,4" CornerRadius="4" HasShadow="False" VerticalOptions="Center"
                                           BackgroundColor="{Binding FeedbackRecibido, Converter={StaticResource FeedbackColorConverter}}">
                                        <Label Text="{Binding FeedbackRecibido, Converter={StaticResource FeedbackTextConverter}}"
                                               FontSize="10" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                                    </Frame>

                                    <Button Grid.Column="4" FontSize="16" WidthRequest="40" HeightRequest="40" Padding="0" CornerRadius="6"
                                            BackgroundColor="{Binding FeedbackRecibido, Converter={StaticResource FeedbackColorConverter}}"
                                            Clicked="OnVerDetallesClicked">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding FeedbackRecibido}" Value="True">
                                                <Setter Property="Text" Value="âœ…"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding FeedbackRecibido}" Value="False">
                                                <Setter Property="Text" Value="ðŸ“ž"/>
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.Footer>
                        <Frame Padding="16" BackgroundColor="#2a1034" CornerRadius="6" BorderColor="#7a3cff" Margin="0,-1,0,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Compras.Count, StringFormat='Total: {0} registros'}" TextColor="White" VerticalOptions="Center"/>
                                <Button Grid.Column="1" Text="ðŸ”„" Command="{Binding RefreshCommand}" BackgroundColor="#22c55e" CornerRadius="4"/>
                            </Grid>
                        </Frame>
                    </CollectionView.Footer>
                </CollectionView>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>