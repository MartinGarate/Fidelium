<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovilApp.MainPage"
             BackgroundColor="#0d0617">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" 
              Padding="0">
            
            <!-- Header con gradiente -->
            <BoxView Grid.Row="0" 
                     HeightRequest="300">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#7a3cff" Offset="0.0" />
                        <GradientStop Color="#bf4dff" Offset="0.5" />
                        <GradientStop Color="#0d0617" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Contenido principal -->
            <VerticalStackLayout Grid.Row="0" 
                                 Grid.RowSpan="2"
                                 Padding="30,40"
                                 Spacing="30">
                
                <!-- Logo y título -->
                <VerticalStackLayout Spacing="15" 
                                     HorizontalOptions="Center">
                    <Frame HeightRequest="120" 
                           WidthRequest="120" 
                           CornerRadius="60" 
                           Padding="0"
                           HasShadow="True"
                           BorderColor="#bf4dff">
                        <Frame.Shadow>
                            <Shadow Brush="#bf4dff" 
                                    Offset="0,8" 
                                    Radius="20" 
                                    Opacity="0.6"/>
                        </Frame.Shadow>
                        <Image Source="dotnet_bot.png"
                               Aspect="AspectFit" />
                    </Frame>

                    <Label Text="🎯 Fidelium"
                           FontSize="42"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center">
                        <Label.Shadow>
                            <Shadow Brush="Purple" 
                                    Offset="2,2" 
                                    Radius="8" 
                                    Opacity="0.5"/>
                        </Label.Shadow>
                    </Label>

                    <Label Text="Sistema de Fidelización Inteligente"
                           FontSize="18"
                           TextColor="#bf4dff"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- Cards de características -->
                <VerticalStackLayout Spacing="15" 
                                     Margin="0,20,0,0">
                    
                    <!-- Card 1: Seguimiento -->
                    <Frame BorderColor="#7a3cff" 
                           Padding="20" 
                           CornerRadius="16"
                           BackgroundColor="#1a0824">
                        <Frame.Shadow>
                            <Shadow Brush="#7a3cff" 
                                    Offset="0,4" 
                                    Radius="10" 
                                    Opacity="0.3"/>
                        </Frame.Shadow>
                        <Grid ColumnDefinitions="Auto,*" 
                              ColumnSpacing="15">
                            <Frame Grid.Column="0" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   CornerRadius="25" 
                                   Padding="0"
                                   BackgroundColor="#7a3cff"
                                   HasShadow="False">
                                <Label Text="📊" 
                                       FontSize="28" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" 
                                                 Spacing="5"
                                                 VerticalOptions="Center">
                                <Label Text="Seguimiento de Ventas"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Gestiona y da seguimiento a todas tus ventas en tiempo real"
                                       FontSize="13"
                                       TextColor="LightGray"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Card 2: Feedback -->
                    <Frame BorderColor="#7a3cff" 
                           Padding="20" 
                           CornerRadius="16"
                           BackgroundColor="#1a0824">
                        <Frame.Shadow>
                            <Shadow Brush="#7a3cff" 
                                    Offset="0,4" 
                                    Radius="10" 
                                    Opacity="0.3"/>
                        </Frame.Shadow>
                        <Grid ColumnDefinitions="Auto,*" 
                              ColumnSpacing="15">
                            <Frame Grid.Column="0" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   CornerRadius="25" 
                                   Padding="0"
                                   BackgroundColor="#bf4dff"
                                   HasShadow="False">
                                <Label Text="💬" 
                                       FontSize="28" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" 
                                                 Spacing="5"
                                                 VerticalOptions="Center">
                                <Label Text="Feedback Inteligente"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Recopila opiniones y mejora la satisfacción del cliente"
                                       FontSize="13"
                                       TextColor="LightGray"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Card 3: Notificaciones -->
                    <Frame BorderColor="#7a3cff" 
                           Padding="20" 
                           CornerRadius="16"
                           BackgroundColor="#1a0824">
                        <Frame.Shadow>
                            <Shadow Brush="#7a3cff" 
                                    Offset="0,4" 
                                    Radius="10" 
                                    Opacity="0.3"/>
                        </Frame.Shadow>
                        <Grid ColumnDefinitions="Auto,*" 
                              ColumnSpacing="15">
                            <Frame Grid.Column="0" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   CornerRadius="25" 
                                   Padding="0"
                                   BackgroundColor="#22c55e"
                                   HasShadow="False">
                                <Label Text="🔔" 
                                       FontSize="28" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" 
                                                 Spacing="5"
                                                 VerticalOptions="Center">
                                <Label Text="Recordatorios Automáticos"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Nunca pierdas el contacto con tus clientes"
                                       FontSize="13"
                                       TextColor="LightGray"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>

                <!-- Mensaje de bienvenida personalizado -->
                <Frame BorderColor="#bf4dff" 
                       Padding="25" 
                       CornerRadius="16"
                       Margin="0,20,0,0"
                       BackgroundColor="#2a1034">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="✨ ¡Bienvenido!"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Estás a punto de revolucionar la forma en que gestionas tus relaciones con los clientes."
                               FontSize="15"
                               TextColor="LightGray"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>
                        <BoxView HeightRequest="2" 
                                 Color="#bf4dff" 
                                 Margin="30,10"
                                 CornerRadius="1"/>
                        <Label Text="Usa el menú lateral para comenzar 👈"
                               FontSize="14"
                               TextColor="#bf4dff"
                               FontAttributes="Italic"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <!-- Footer -->
            <VerticalStackLayout Grid.Row="2" 
                                 Padding="20" 
                                 Spacing="8"
                                 BackgroundColor="#0d0617">
                <BoxView HeightRequest="1" 
                         Color="#7a3cff" 
                         Opacity="0.3"
                         Margin="0,0,0,15"/>
                <Label Text="Fidelium © 2025"
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Desarrollado con ❤️ para mejorar tu negocio"
                       FontSize="11"
                       TextColor="DarkGray"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>

</ContentPage>
